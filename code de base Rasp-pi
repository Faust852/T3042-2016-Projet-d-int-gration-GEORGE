import RPi.GPIO as GPIO
#from threading import Thread

speedM1 = 20 # percentage of speed
speedM2 = 20

outputPinM1 = 11 #in1
outputPinM2 = 12 #in2

directionTPinM1 = 13
directionTPinM2 = 14

directionFPinM1 = 15
directionFPinM2 = 16

directionM1 = True # True -> forward
directionM2 = True # False -> backward

hz = 500 # frequence

def direction(sens, in1, in2):
    if directionM1:
        in1 = 1
        in2 = 0
    else:
        in1 = 0
        in2 = 1

GPIO.setmode(GPIO.BOARD) # use the pin numbers

GPIO.setup(outputPinM1, GPIO.OUT) # set the pin as output pin
GPIO.setup(outputPinM2, GPIO.OUT)

motor1 = GPIO.PWM(outputPinM1, hz)
motor2 = GPIO.PWM(outputPinM2, hz)

motor1.start(0)
motor2.start(0)

#while True: # infinit boucle? 

motor1.CangeDutyCycle(speedM1)
direction(directionM1, directionTPinM1, directionFPinM1)

motor2.CangeDutyCycle(speedM2)
direction(directionM2, directionTPinM2, directionFPinM2)


