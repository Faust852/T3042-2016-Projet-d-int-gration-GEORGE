package pr1.main;

import java.awt.GraphicsDevice;
import java.awt.GraphicsEnvironment;

import javax.swing.JFrame;
import javax.swing.WindowConstants;

public class GameWindows extends JFrame{
	
	boolean fullScreenEnable = false;
	int fullScreenMod = 0;
	GraphicsDevice device = GraphicsEnvironment.getLocalGraphicsEnvironment().getScreenDevices()[1];
	
	public GameWindows(String title, int width, int height){
		setTitle(title);
		setSize(width, height);
		setLocationRelativeTo(null);
		setDefaultCloseOperation(DISPOSE_ON_CLOSE);
		setResizable(false);
	}
	
	private void setFullScreen(){
		switch (fullScreenMod) {
		case 0:
			System.out.println("No fullScreen");
			setUndecorated(false);
			break;
		case 1:
			setExtendedState(JFrame.MAXIMIZED_BOTH);
			setUndecorated(true);
			break;
		case 2:
			device.setFullScreenWindow(this);
			setUndecorated(true);
			break;
		}
	}
	
	public void setFullScreenMode() {
		fullScreenEnable = true;
		if (fullScreenEnable <= 2) {
			
		}
	}
}
